# YFEvents Environment Configuration
# Copy this file to .env and update with your values

#=============================================================================
# APPLICATION
#=============================================================================
APP_NAME="YFEvents"
APP_ENV=local                      # local, development, staging, production
APP_DEBUG=true                     # Set to false in production
APP_URL=http://localhost
APP_KEY=                          # Generate with: php -r "echo base64_encode(random_bytes(32));"
APP_VERSION=2.0.0
APP_TIMEZONE=America/Los_Angeles

#=============================================================================
# DATABASE
#=============================================================================
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=yakima_finds
DB_USERNAME=yfevents
DB_PASSWORD=yfevents_pass
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

#=============================================================================
# PATHS & DIRECTORIES
#=============================================================================
STORAGE_PATH=storage/
CACHE_PATH=storage/cache/
LOG_PATH=storage/logs/
SESSION_PATH=storage/sessions/
UPLOAD_PATH=public/uploads/

#=============================================================================
# LOGGING
#=============================================================================
LOG_LEVEL=INFO                    # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_DAILY=true                    # Create daily log files
LOG_MAX_FILES=30                  # Keep logs for 30 days

#=============================================================================
# CACHE
#=============================================================================
CACHE_DRIVER=file                 # file, redis, memcached
CACHE_PREFIX=yfevents_cache_

#=============================================================================
# SESSION
#=============================================================================
SESSION_LIFETIME=120              # Minutes
SESSION_ENCRYPT=false
SESSION_COOKIE=yfevents_session
SESSION_SECURE_COOKIE=false       # Set to true if using HTTPS
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

#=============================================================================
# EMAIL CONFIGURATION
#=============================================================================
MAIL_ENABLED=true
MAIL_DRIVER=smtp                  # mail, smtp, sendmail
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=                    # Use app-specific password for Gmail
MAIL_ENCRYPTION=tls               # tls, ssl
MAIL_FROM_EMAIL=noreply@yakimafinds.com
MAIL_FROM_NAME="YakimaFinds"
MAIL_TEST_MODE=false
MAIL_TEST_RECIPIENTS=             # Comma-separated list for testing

# Email Event Processing (IMAP)
IMAP_SERVER={imap.gmail.com:993/imap/ssl}INBOX
IMAP_USERNAME=
IMAP_PASSWORD=
EMAIL_BATCH_SIZE=50
EMAIL_MARK_AS_READ=true
EMAIL_DELETE_PROCESSED=false

#=============================================================================
# SMS CONFIGURATION
#=============================================================================
SMS_ENABLED=false
SMS_PROVIDER=twilio               # twilio, aws, nexmo
SMS_FROM_NUMBER=
SMS_TEST_MODE=true

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# AWS SNS
AWS_KEY=
AWS_SECRET=
AWS_REGION=us-east-1

# Nexmo/Vonage
NEXMO_API_KEY=
NEXMO_API_SECRET=

#=============================================================================
# API KEYS
#=============================================================================
GOOGLE_MAPS_API_KEY=
SEGMIND_API_KEY=                  # For intelligent scraping
FIRECRAWL_API_KEY=                # For enhanced web scraping

#=============================================================================
# SCRAPER CONFIGURATION
#=============================================================================
SCRAPER_ENABLED=true
SCRAPER_MAX_WORKERS=5
SCRAPER_RATE_LIMIT=60             # Requests per minute
SCRAPER_TIMEOUT=30                # Seconds
SCRAPER_USER_AGENT="YFEvents/2.0 (+http://yakimafinds.com)"

#=============================================================================
# SECURITY
#=============================================================================
SECURITY_SALT=                    # Generate random salt
JWT_SECRET=                       # For API authentication
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100       # Per minute
ALLOWED_HOSTS=localhost,137.184.245.149

#=============================================================================
# MODULE CONFIGURATION
#=============================================================================
# YFAuth Module
AUTH_SESSION_LIFETIME=1440        # Minutes (24 hours)
AUTH_REMEMBER_ME_DURATION=30      # Days
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_LOCKOUT_TIME=15              # Minutes

# YFClaim Module
CLAIM_QR_CODE_SIZE=300            # Pixels
CLAIM_OFFER_EXPIRY_DAYS=7

# YFTheme Module
THEME_CACHE_ENABLED=true
THEME_COMPILE_SASS=false          # Set to true if using SASS

#=============================================================================
# DEVELOPMENT & DEBUGGING
#=============================================================================
DEV_SHOW_ERRORS=true              # Never true in production
DEV_ERROR_REPORTING=E_ALL
DEV_DISPLAY_ERRORS=1
DEV_PROFILE_QUERIES=false         # Log slow queries
DEV_QUERY_THRESHOLD=1000          # Milliseconds

#=============================================================================
# FEATURE FLAGS
#=============================================================================
FEATURE_CHAT_ENABLED=true
FEATURE_FORUM_ENABLED=true
FEATURE_CLAIMS_ENABLED=true
FEATURE_CLASSIFIEDS_ENABLED=true
FEATURE_INTELLIGENT_SCRAPER=true
FEATURE_EMAIL_EVENTS=true