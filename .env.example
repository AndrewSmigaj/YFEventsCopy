# YFEvents Environment Configuration
# Copy this file to .env and configure for your environment

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=yakima_finds
DB_USERNAME=yfevents
DB_PASSWORD=your_secure_password_here
DB_CHARSET=utf8mb4

# Google Maps API Configuration
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=America/Los_Angeles

# Admin Authentication
ADMIN_SESSION_TIMEOUT=3600
ADMIN_PASSWORD_HASH=your_hashed_admin_password

# Scraping Configuration
SCRAPING_ENABLED=true
SCRAPING_INTERVAL=3600
MAX_SCRAPING_THREADS=3

# Email Configuration (Optional)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@domain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="YFEvents System"

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=yfevents_

# Logging
LOG_LEVEL=info
LOG_MAX_FILES=5

# Security
SESSION_LIFETIME=120
CSRF_TOKEN_LIFETIME=3600

# External APIs (Optional)
SEGMIND_API_KEY=your_segmind_api_key_for_ai_scraping
OPENSTREETMAP_API_URL=https://nominatim.openstreetmap.org

# File Upload Settings
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# Module Configuration
MODULES_ENABLED=true
MODULES_AUTO_LOAD=true